<h1>New Post</h1>

<%= form_with model: @post do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= form.label :body, "What's on your mind?" %>
    <%= form.text_area :body %>
  </div>

  <%= form.submit 'Create post' %>
<% end %>